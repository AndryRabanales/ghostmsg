generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql" // o mysql/sqlite seg√∫n tu stack
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(cuid())
  userId    String?
  content   String
  createdAt DateTime @default(now())
  seen      Boolean  @default(false)
  status    Status   @default(PENDING)
}

enum Status {
  PENDING
  FULFILLED
  NOT_FULFILLED
}
